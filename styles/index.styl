      text-decoration: none;
      background-color: transparent;
      color: #999;
    }

    .active-link {
        color: #999 !important;
    }

    .open .nav a {
      -webkit-animation: slide-in .4s .2s backwards;
      animation: slide-in .4s .2s backwards;
    }

    .open .nav li:nth-of-type(2) a {
        -webkit-animation-delay: .3s;
        animation-delay: .3s;
    }

    .open .nav li:nth-of-type(3) a {
        -webkit-animation-delay: .35s;
        animation-delay: .35s;
    }

    .open .nav li:nth-of-type(4) a {
        -webkit-animation-delay: .4s;
        animation-delay: .4s;
    }

    .open .nav li:nth-of-type(5) a {
        -webkit-animation-delay: .45s;
        animation-delay: .45s;
    }

    .open .nav li:nth-of-type(6) a {
        -webkit-animation-delay: .5s;
        animation-delay: .5s;
    }

    .open .nav li:nth-of-type(7) a {
        -webkit-animation-delay: .55s;
        animation-delay: .55s;
    }

    .open .nav li:nth-of-type(8) a {
        -webkit-animation-delay: .6s;
        animation-delay: .6s;
    }

    @-webkit-keyframes slide-in {
      0% {
        opacity: 0;
        -webkit-transform: translateX(80px);
        transform: translateX(80px);
      }
      100% {
        opacity: 1;

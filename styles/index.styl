        }
      } 
      &.open {right:0;top:0;}
      
    }
    .nav {
      list-style: none;
      text-align: center;
      /*padding: 0 30px 0 0;*/
      position: absolute;
      transform: translate(-50%,-50%);
      top: 50%;
      left: 50%;
    }


    .nav a {
      display: block;
      font-size: 100%;
      text-decoration: none;
      color: #fff;
      -webkit-transform: translateZ(0);
      transform: translateZ(0);
    }

    .nav>li>a:focus,

fs = 16px
lh = 1.5
pad = 1em
mww = 60%
pp = 100%/18

html.no-js .js, html.js:not(.domready) .js, // hide elements that requires JS when JS is not available (or not ready)
html.js.domready .no-js // hide no-js elements when js become available
  display:none;

c()
  padding-left:pp;padding-right:pp; margin-left:auto;margin-right:auto;
  @media (min-width:1400px)
    max-width:mww; padding-left:0;padding-right:0;
.c
  c()

wide()
  w = (100% * 100/(100 - pp*2));
 
  width:w;
  margin-left:((100% - w)/2);
  @media (min-width:1400px)
    w = (100% * 100/mww)
    width:w;
    margin-left:((100% - w)/2);
.wide
  wide()

ratiobloc(w, h)
  padding-top:(100% * h/w);
  
  position:relative;
  >*
    position:absolute;left:0;right:0;top:0;bottom:0;

cf()
  &:before,
  &:after
    content:" "; display:table;
  &:after
    clear:both;
.cf
  cf()

subh()
  margin-bottom:0;
  +*
    margin-top:0;
.subh
  subh()

vcenter()
  height:100%; white-space:nowrap;word-spacing:-.25em;
  &:before
    content:"";display:inline-block;vertical-align:middle; width:0;height:100%;
  >*
    display:inline-block;vertical-align:middle; white-space:normal;word-spacing:normal;
.vcenter
  vcenter()

// Grid (see: http://codepen.io/abernier/pen/Ibwov)
gridgutter=1.5rem // ~line-height
gridcols=4 // mobile-1st
grid(x, n=gridcols, i=gridgutter)
  "calc(%s*((100vw - %s*%s)/%s + %s))" % (x n i n i)
gridpad(i=gridgutter)
  padding-left:(i/2); padding-right:@padding-left; box-sizing:border-box;

*, *:before, *:after {box-sizing:border-box;}

:root {font-size:fs;}

body {
  margin:0; line-height:lh;
  font:400 100%/lh arial, sans-serif;
  -webkit-font-smoothing:antialiased;
}

svg,
object,
img,
video {max-width:100%;}

img[src][width],
object[type="image/svg+xml"][data][width] {height:auto;}

.img {display:inline-block; background-position:center;background-size:cover; background-repeat:no-repeat;}
.img >img {display:block;}
html.js .img >img {visibility:hidden;}
.img.contain {background-size:contain;}

a {color:inherit; text-decoration:none;}

